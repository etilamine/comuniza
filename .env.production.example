# Comuniza Configuration
SITE_NAME=comuniza
SITE_DOMAIN=comuniza.org

# Database
DB_NAME=comuniza123 # PLEASE CHANGE
DB_USER=comuniza123 # PLEASE CHANGE
DB_PASSWORD=password123 # PLEASE CHANGE
DB_ROOT_PASSWORD=password123 # PLEASE CHANGE
DB_HOST=mariadb
DB_PORT=3306

# Django
SECRET_KEY=your-secret-key-change-in-production
DEBUG=0
ALLOWED_HOSTS=0.0.0.0

# Redis
REDIS_URL=redis://redis:6379/0

# Features
ENABLE_REGISTRATION=1
ENABLE_EMAIL_VERIFICATION=1
MAX_ITEMS_PER_USER=100
MAX_GROUPS_PER_USER=20
MAX_MEMBERS_PER_GROUP=50

# Port Configuration - Flexible Mapping
INTERNAL_PROD_PORT=4002
EXTERNAL_PROD_PORT=4002
APP_COMMAND=gunicorn core.wsgi:application --bind 0.0.0.0:${INTERNAL_PROD_PORT:-4002}

# Docker
DOCKER_TARGET=production
DJANGO_ENV=production
APP_VOLUMES=./:/app
APP_PORT=${EXTERNAL_PROD_PORT:-4002}
DB_BUFFER_POOL=256M
# Email settings for SMTP server
EMAIL_HOST=your.email.host
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False
EMAIL_HOST_USER=no-reply@somedomain.org
EMAIL_HOST_PASSWORD=demopassword
DEFAULT_FROM_EMAIL=Comuniza <no-reply@somedomain.org>
SERVER_EMAIL=Comuniza <no-reply@somedomain.org>
EMAIL_TIMEOUT=30
# Production email settings fix
ACCOUNT_EMAIL_VERIFICATION=mandatory
# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# App Command
APP_COMMAND=gunicorn core.wsgi:application --bind 0.0.0.0:4002
